{% extends 'base.html.twig' %}

{% block title %}Hello Show CategoryController!{% endblock %}

{% block body %}
    <h1> Categories are : </h1>
    <ul>
        {% if category %}

            <li>Label : {{ category.label }}</li>
            {% for media in category.medias %}

            <li>{{ media.title }},
                created by {{ media.user.email }},
                le {{ media.createdAt|date('y-m-d H:i:s') }}
            </li>

            {% endfor %}



        {% endif %}
    </ul>
{% endblock %}
